<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="6dp"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tvMayorName"
        android:textColor="@color/accent_material_dark"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tvMayorAge"
        android:textColor="@color/hint_foreground_material_light"
        android:layout_toRightOf="@+id/tvMayorName"
        android:layout_toEndOf="@+id/tvMayorName"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_below="@+id/tvMayorName"
        android:id="@+id/tvMayorCity"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_toEndOf="@+id/tvMayorCity"
        android:layout_toRightOf="@+id/tvMayorCity"
        android:id="@+id/tvMayorXp"
        android:layout_height="wrap_content" />



</RelativeLayout>
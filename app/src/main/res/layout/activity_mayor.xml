<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvMayorName"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="@dimen/abc_text_size_title_material"
        android:gravity="center"
        android:background="@android:color/holo_blue_bright"
        android:textColor="@color/primary_text_default_material_dark"
        android:layout_width="fill_parent"
        android:layout_height="150dp" />

    <TextView
        android:id="@+id/tvMayorAge"
        android:gravity="center"
        android:padding="8dp"
        android:layout_below="@+id/tvMayorName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="fill_parent"
        android:id="@+id/sep1"
        android:layout_below="@+id/tvMayorAge"
        android:background="@android:color/darker_gray"
        android:layout_height="1dp"/>


    <TextView
        android:id="@+id/tvMayorCity"
        android:gravity="center"
        android:padding="8dp"
        android:layout_below="@+id/sep1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="fill_parent"
        android:id="@+id/sep2"
        android:layout_below="@+id/tvMayorCity"
        android:background="@android:color/darker_gray"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/tvMayorXp"
        android:gravity="center"
        android:padding="8dp"
        android:layout_below="@+id/sep2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="fill_parent"
        android:layout_below="@+id/tvMayorXp"
        android:background="@android:color/darker_gray"
        android:layout_height="1dp"/>


</RelativeLayout>
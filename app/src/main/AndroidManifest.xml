<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yoanncos.applicationtest" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".CityListActivity"
            android:label="@string/app_name" >
        </activity>


        <activity
            android:name=".MayorListActivity"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name=".MayorActivity"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name=".BidonActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.example.yoanncos.applicationtest.CityListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.yoanncos.applicationtest.CityListActivity" />
        </activity>

    </application>

</manifest>
